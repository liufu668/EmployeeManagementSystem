<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.hrms.mapper.WorktimeMapper">
    <resultMap id="BaseResultMap" type="com.study.hrms.entity.Worktime">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="check_time" jdbcType="TIMESTAMP" property="checkTime" />
        <result column="check_type" jdbcType="INTEGER" property="checkType" />
        <result column="status" jdbcType="INTEGER" property="status" />
        <result column="employee_id" jdbcType="INTEGER" property="employeeId" />
    </resultMap>
    <resultMap id="VOResultMap" type="com.study.hrms.vo.WorktimeVO">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="check_time" jdbcType="TIMESTAMP" property="checkTime" />
        <result column="check_type" jdbcType="INTEGER" property="checkType" />
        <result column="status" jdbcType="INTEGER" property="status" />
        <association property="employee" javaType="com.study.hrms.vo.EmployeeVO">
            <id column="e_id" property="id"/>
            <result column="em_name" property="emName"/>
        </association>
    </resultMap>
    <sql id="Base_Column_List">
        id,
       	  	      	check_time,
       	  	      	check_type,
       	  	      	status,
       	  	    	  	employee_id

    </sql>
    <insert id="insert" parameterType="com.study.hrms.entity.Worktime">
        insert into worktime(
            id,
            check_time,
            check_type,
            status,
            employee_id
        ) values (
            #{id,jdbcType=INTEGER},
            #{checkTime,jdbcType=TIMESTAMP},
            #{checkType,jdbcType=INTEGER},
            #{status,jdbcType=INTEGER},
            #{employeeId,jdbcType=INTEGER}
        )
    </insert>
    <update id="updateByPrimaryKey" parameterType="com.study.hrms.entity.Worktime">
        update worktime
        <set>
            <if test="checkTime != null">
                check_time = #{checkTime,jdbcType=TIMESTAMP},
            </if>
            <if test="checkType != null">
                check_type = #{checkType,jdbcType=INTEGER},
            </if>
            <if test="status != null">
                status = #{status,jdbcType=INTEGER},
            </if>
            <if test="employeeId != null">
                employee_id = #{employeeId,jdbcType=INTEGER}
            </if>
        </set>

        where
            id = #{id,jdbcType=INTEGER}
    </update>
    <delete id="deleteByPrimaryId" parameterType="java.lang.Integer">
        delete from worktime
        where id = #{id,jdbcType=INTEGER}
    </delete>

    <!--因为使用的时间区间查询,涉及的大小于号与XML的括号冲突,所以使用<![CDATA[...]]>将内容标记为纯文本,被解析器忽略-->
    <select id="list" parameterType="com.study.hrms.qo.WorktimeQO" resultMap="VOResultMap">
        select wt.id id,wt.check_time,wt.status,wt.check_type,wt.employee_id e_id,em.em_name
        from worktime wt
        left join employee em on wt.employee_id = em.id
        <where>
            <if test="checkStartTime != null">
                <![CDATA[ and wt.check_time >= #{checkStartTime,jdbcType=TIMESTAMP}]]>
            </if>
            <if test="checkEndTime != null">
                <![CDATA[ and wt.check_time >= #{checkEndTime,jdbcType=TIMESTAMP}]]>
            </if>
            <if test="dept != null">
                and em.dept = #{dept,jdbcType=INTEGER}
            </if>
            <if test="employeeId != null">
                and wt.employee_id = #{employeeId,jdbcType=INTEGER}
            </if>
        </where>
    </select>
    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from worktime
        where id = #{id,jdbcType=INTEGER}
    </select>

</mapper>
